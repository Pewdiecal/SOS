<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity"
    android:background="@drawable/bckg">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Add an emergency contact"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/ctc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_above="@+id/addctcbtn2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/addctcbtn1"
        android:enabled="false"
        android:editable="false"
        android:focusable="false"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/ctctxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_above="@+id/addctcbtn3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/addctcbtn2"
        android:enabled="false">
    </EditText>

    <EditText
        android:id="@+id/ctctxt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBottom="@+id/addctcbtn3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/addctcbtn3"
        android:enabled="false">

    </EditText>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addctcbtn1"
        android:src="@drawable/ic_action_add_person"
        android:layout_below="@+id/txt1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addctcbtn2"
        android:src="@drawable/ic_action_add_person"
        android:layout_below="@+id/addctcbtn1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addctcbtn3"
        android:layout_below="@+id/addctcbtn2"
        android:layout_alignLeft="@+id/addctcbtn2"
        android:layout_alignStart="@+id/addctcbtn2"
        android:src="@drawable/ic_action_add_person" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/okbtn1"
        android:src="@drawable/ok"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resetbtn"
        android:src="@drawable/reset"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/okbtn1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>